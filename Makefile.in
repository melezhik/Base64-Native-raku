SRC=src

all : lib

lib : resources/lib/libbase64%SO%

resources/lib/libbase64%SO% : $(SRC)/base64%O%
	%LD% %LDSHARED% %LDFLAGS% %LDOUT%resources/lib/libbase64%SO% $(SRC)/base64%O%

$(SRC)/base64%O% : $(SRC)/base64.c $(SRC)/base64.h
	%CC% -I $(SRC) -c %CCSHARED% %CCFLAGS% %CCOUT%$(SRC)/base64%O% $(SRC)/base64.c

test : all
	@prove -e'perl6 -I lib' -v t

clean :
	@rm -f $(SRC)/*.o resources/lib/libbase64%SO%

realclean : clean
	@rm -f Makefile


